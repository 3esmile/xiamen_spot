<h1>Listing spots</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Address</th>
    <th>Url</th>
    <th>Pinyin</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spots.each do |spot| %>
  <tr>
    <td><%= spot.name %></td>
    <td><img src="/assets/<%= spot.image %>" width="100" height="100"></td>
    <td><%= spot.address %></td>
    <td><%= spot.url %></td>
    <td><%= spot.pinyin %></td>
    <td><%= spot.category.name %></td>
    <td><%= link_to 'Show', spot %></td>
    <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
    <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Spot', new_spot_path %>
