<%= form_for(@spot) do |f| %>
  <% if @spot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spot.errors.count, "error") %> prohibited this spot from being saved:</h2>

      <ul>
      <% @spot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :pinyin %><br />
    <%= f.text_field :pinyin %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => '100' %>
  </div>

  <div class="field mt20">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Images</div>

        <table class="table table-bordered">
          <thead>
          <tr>
            <th><%= f.label :image1 %></th>
            <td><%= f.text_field :image %></td>
            <th><%= f.label :image2 %></th>
            <td><%= f.text_field :image2 %></td>
            
          </tr>
          </thead>
          <tbody>
          <tr>
            <th><%= f.label :image3 %></th>
            <td><%= f.text_field :image3 %></td>
            <th><%= f.label :image4 %></th>
            <td><%= f.text_field :image4 %></td>
          </tr>
          </tbody>
        </table>
    </div>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :'open time' %><br />
    <%= f.text_field :open_time %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :rate %><br />
    <%= f.number_field :rate %>
  </div>

  <div class="field">
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </div>

  <div class="field">
    <%= f.label :category_id %><br />
    <%#= f.text_field :category_id %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, :include_blank => true)  %>
    <%= f.collection_select(:area_id, Area.all, :id, :name, :include_blank => true)  %>
  </div>

  <div class="field">
    <%= f.label :featured? %><br />
    <%= f.radio_button :featured, true %> Yes | 
    <%= f.radio_button :featured, false %> No


  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
