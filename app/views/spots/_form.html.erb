<%= form_for(@spot) do |f| %>
  <div  role="form">
  <% if @spot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spot.errors.count, "error") %> prohibited this spot from being saved:</h2>

      <ul>
      <% @spot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :pinyin %><br />
    <%= f.text_field :pinyin, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => '100', :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Images</div>

        <table class="table table-bordered">
          <thead>
          <tr>
            <th><%= f.label :image1 %></th>
            <td><%= f.text_field :image, :class => 'form-control' %></td>
            <th><%= f.label :image2 %></th>
            <td><%= f.text_field :image2, :class => 'form-control' %></td>
            
          </tr>
          </thead>
          <tbody>
          <tr>
            <th><%= f.label :image3 %></th>
            <td><%= f.text_field :image3, :class => 'form-control' %></td>
            <th><%= f.label :image4 %></th>
            <td><%= f.text_field :image4, :class => 'form-control' %></td>
          </tr>
          </tbody>
        </table>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :address %><br />
    <%= f.text_field :address, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :'open time' %><br />
    <%= f.text_field :open_time, :class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br />
    <%= f.number_field :price, :class => 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :rate %><br />
    <%= f.number_field :rate, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :tags %><br />
    <%= f.text_field :tags, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :url %><br />
    <%= f.text_field :url, :class => 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, Category.all, :id, :name, {:include_blank => true}, {:class => 'form-control'} %>


  </div>

  <div class="field form-group">
    <%= f.label :area_id %><br />
    <%= f.collection_select :area_id, Area.all, :id, :name, {:include_blank => true}, {:class => 'form-control'}  %>
  </div>

  <div class="field form-group">
    <%= f.label :featured? %><br />
    <%= f.radio_button :featured, true %> Yes | 
    <%= f.radio_button :featured, false %> No
  </div>


  <div class="actions form-group">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>

</div>
<% end %>
